@model Queue_Management_System.Models.Check_In

@{
    ViewData["Title"] = "CheckinPage";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


<div class="row" style="background-color:white;box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2)">
    <div class="col-8">

        <div style="margin:8px;padding:8px;text-align:left">
            <div style="color:black;font-size:xx-large;" class="text-capitalize">New Service</div>
            <div style="color:gray;font-size:small;" class="text-capitalize">Create New Service</div>
        </div>

    </div>
    <div class="col-4">
        <div style="margin:8px;padding:8px;text-align:end">
@*             <a asp-action="CheckinList" asp-controller="Queue" style="background:#0670ba;padding:4px;border-radius:8px;color:white"><i class="fa fa-eye" aria-hidden="true"></i>  View  Services</a>
 *@        </div>
    </div>
</div>

<hr />
<div class="container-fluid" style="color:black;">
    <div style="padding:8px;margin:8px;border-radius:16px;background-color:white;box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2)">
        <form method="post" asp-action="CheckinPage" style="padding:30px">
            <div class="row">
                <div class="col-md-3">
                <label>Customer Name</label>
                <input asp-for="CustomerName" required class="form-control" type="text" />
                </div>
                <div class="col-md-3">
                <label>Select Service Type:</label>
                    <select asp-for="Servicetypes" class="form-control" required asp-items="@ViewBag.servicename">
                    <option value="">Select Service...</option>
                </select>
                <br />
                </div>
                <div class="col-md-3">
                    <label> Service </label>
                    <textarea asp-for="description" required class="form-control" >
                    
                    </textarea>
                    <br />
                </div>
                
            </div>
          
            <div class="row">
                <div class="col-md-3 text-center">
                    <br />
                    <input type="submit" value="Generate Ticket " class="btn btn-secondary text-center" style="background-color:#0f1230" />
                </div>
            </div>
    @* <button type="submit"></button> *@
</form>

</div>
</div>
