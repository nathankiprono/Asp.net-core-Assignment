@model IEnumerable<Queue_Management_System.Models.serviceproviders>
@{
    ViewData["Title"] = "WaitingPage";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}


<div class="row" style="background-color:white;box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2)">
    <div class="col-8">

        <div style="margin:8px;padding:8px;text-align:left">
            <div style="color:black;font-size:xx-large;" class="text-capitalize"> Service Providers</div>
            <div style="color:gray;font-size:small;" class="text-capitalize">Service Providers</div>
        </div>

    </div>
    <div class="col-4">
        <div style="margin:8px;padding:8px;text-align:end">
            <a asp-action="ServiceProviders" asp-controller="Admin" style="background:#0670ba;padding:4px;border-radius:8px;color:white"><i class="fa fa-Plus" aria-hidden="true"></i>  Add New  Service Provider</a>
        </div>
    </div>
</div>

<hr />

<div style="padding:8px;margin:8px;border-radius:16px;background-color:white;box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2)">
    <table class="table  table-striped table-bordered table-responsive-lg  table-sm" id="loans" style="color:black">
        <thead style="background-color:#0f1230;color:white">
            <tr>
                <th>
                     Name
                </th>
              
               
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
               
                <tr>
                    
                    <td>
                        @item.Service_Providers
                    </td>
                   

                 

                    <td>
                        <a  href="#"><i class="fa fa-pencil" aria-hidden="true"></i> <span>Edit</span> </a>|


                        <a asp-action="Delete" data-toggle="modal" data-target="#_@item.Id" style="color:red" asp-route-id="@item.Id"><i class="fa fa-trash" aria-hidden="true"></i> <span>Remove</span> </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


